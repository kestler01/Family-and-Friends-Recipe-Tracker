{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
          {{ dessert.name }}    
        </h2>
         <p class="card-text">
            {% if dessert.plantBased %}
                Plant Based
            {% else %}
                Not plant based
            {% endif %}
        </p>
        <p class="card-text">
            {% if dessert.vegitarian %}
                vegetarian
            {% else %}
                Not vegetarian 
            {% endif %}
        </p>
        <p class="card-text">
            {% if dessert.dairyFree %}
                Dairy free
            {% else %}
                Not dairy free
            {% endif %}
        </p>
        <p class="card-text">
             {% if dessert.hasMeat %}
                Contains meat
            {% else %}
                No meat
            {% endif %}
        </p>
        <p class="card-text">
             {% if dessert.hasGluten %}
                Gluten free
            {% else %}
                Not gluten free
            {% endif %}
        </p>
        <h4>Ingredients: {{dessert.ingredients}} </h4>
        {%- comment -%} {% if dessert.owner == userId %} {%- endcomment -%}
        <h4>Directions: {{dessert.directions}} </h4>
        
        {% if dessert.owner == userId %}
        <div class="btn-group">
            <a href="/desserts/{{ dessert.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/desserts/{{ dessert.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
    <hr>
    <h4>comments</h4>
    <hr>
    {% if loggedIn %}
      <div class="col-md-6">
        <form action="/commentDesserts/{{dessert.id}}" method="POST">
          <fieldset>
            <legend>Add Comment</legend>
            <label class="form-label">comment:</label>
            <input class="form-control mb-1" type="text" placeholder="enter your comment..." name="note" required>
          </fieldset>
          <input class="btn btn-success" type="submit" value="add comment">
        </form>
      </div>
    {% else %}
      <div class="col-md-6">
        <small>If you'd like to leave a comment, please log in...</small>
      </div>
    {% endif %}
    <hr>
    {% if dessert.comments.length > 0%}
      <div class="container-sm justify-content-center">
        <div class="col-md-8 col-lg-6">
          {% for comment in dessert.comments %}
            {% render '../DessertComment.liquid', comment: comment, userId: userId, dessert: dessert %}
          {% endfor %}
        </div>
      </div>
    {% else %}
      <small>no comments yet...</small>
    {% endif %}    
</div>
{% endblock %}